#vim section
if [ -f ~/buffer ]; then
    rm ~/buffer
fi


newrails() { 
    wizpath="$HOME/gitrepos/myProjects/ruby_stuff/rails_wiz"
    if [ $# == 1 ]; then
        rails new $1 -m "$wizpath/new_rails1.rb" -T -d mysql
    elif [ $# == 2 ]; then
        rails new $1 -m "$wizpath/new_rails$2.rb" -T
    else
        echo "This function takes one or two inputs"
        # exit 1
    fi
    cd $1
    unset wizpath
}
#random
function take {    
    mkdir $1; cd $1
}
function checklist() {

    if [[ -d /usr/apt ]] ; then
        dpkg -l |grep $1 | less
    elif [[ -e /usr/bin/eix ]]; then
        eix-installed all |ack $1| $PAGER
    else
        echo "only for debian or getoo with eix sytems"
    fi
}
    
namedir() { export $1=$PWD; : ~$1 }

# Changing/making/removing directory

cd () {
  if   [[ "x$*" == "x..." ]]; then
    cd ../..
  elif [[ "x$*" == "x...." ]]; then
    cd ../../..
  elif [[ "x$*" == "x....." ]]; then
    cd ../../..
  elif [[ "x$*" == "x......" ]]; then
    cd ../../../..
  else
    builtin cd "$@"
  fi
}


