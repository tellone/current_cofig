#vim section
if [ -f ~/buffer ]; then
    rm ~/buffer
fi


newrails() { 
    wizpath="$HOME/gitrepos/myProjects/ruby_stuff/rails_wiz"
    if [ $# == 1 ]; then
        rails new $1 -m "$wizpath/new_rails1.rb" -T -d mysql
    elif [ $# == 2 ]; then
        rails new $1 -m "$wizpath/new_rails$2.rb" -T
    else
        echo "This function takes one or two inputs"
        # exit 1
    fi
    cd $1
    unset wizpath
}
#random
function take {    
    mkdir $1; cd $1
}
function checklist() {

    if [[ ! -d /usr/apt ]] ; then
        echo "only for debian sytems"
    else
        dpkg -l |grep $1 | less
    fi
}
    
namedir() { export $1=$PWD; : ~$1 }

