#!/bin/bash
. "/home/tellone/bin/flib"
if [[ $EUID -ne 0 ]]; then
    echo "This script must be run as root" 1>&2
    exit 1
fi

apt-get update >> /tmp/uptemlog.log

if [[ $? -ne 0 ]]; then
    cat /var/uptemlog.log
    if yesno(); then
        continue
    fi
    break
fi
apt-get upgrade >> /tmp/uptemlog.log

if [[ $? -ne 0 ]]; then
    cat /var/uptemlog.log
    if yesno(); then
        continue
    else
        exit 1
    fi
fi
apt-get dist-upgrade >> /tmp/uptemlog.log


