#!/bin/bash
#Author: tellone
#Purpose: opening quckrefs stored in 
#the ~/Documents/quickref folder


refPath="/home/tellone/Documents/quickrefs"
ref="$1.pdf"
pdfread=xpdf
if [[ "$#" -ne 1 ]]; then
    echo "this script requirs 1 inputparameter to open"
    echo "your choises are:"
    echo  `ls $refPath`
    exit 1
fi

case "$1" in
    "py")
        $pdfread "$refPath/py_ref.pdf" & 2>/dev/null;;
    "bash")
        $pdfread "$refPath/bash_ref.pdf" & &>/dev/null;;
    
   "html")
       $pdfread "$refPath/HTML.pdf" & &>/dev/null;;
    *) 
        if [[ -r "$refPath/$ref"  ]]; then
            $pdfread "$refPath/$ref"& &>/dev/null
        else
            echo "no such file or file not readable"
            exit 1
        fi ;;
esac
exit 0

#End

 
